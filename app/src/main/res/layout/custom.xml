<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:windowTranslucentStatus="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|center"
    android:orientation="vertical"
    tools:context=".HomeScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/launcher_mail"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="end"
            android:layout_weight="0"
            android:onClick="onClick"
            android:src="@mipmap/icon_mail"
            android:tag="com.fsck.k9" />

        <ImageView
            android:id="@+id/launcher_sync"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="end"
            android:layout_weight="0"
            android:onClick="onClick"
            android:src="@mipmap/icon_sync"
            android:tag="org.amoradi.syncopoli" />

        <ImageView
            android:id="@+id/launcher_vpn"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="end"
            android:layout_weight="0"
            android:onClick="onClick"
            android:src="@mipmap/icon_vpn"
            android:tag="de.blinkt.openvpn" />

        <ImageView
            android:id="@+id/launcher_clock"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="end"
            android:layout_weight="0"
            android:onClick="onClick"
            android:src="@mipmap/icon_clock"
            android:tag="com.google.android.deskclock" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/launcher_sms"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="end"
            android:layout_weight="0"
            android:onClick="onClick"
            android:src="@mipmap/icon_sms"
            android:tag="com.moez.QKSMS" />

        <ImageView
            android:id="@+id/launcher_gallery"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="end"
            android:layout_weight="0"
            android:onClick="onClick"
            android:src="@mipmap/icon_gallery"
            android:tag="com.simplemobiletools.gallery" />

        <ImageView
            android:id="@+id/launcher_password"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="end"
            android:layout_weight="0"
            android:onClick="onClick"
            android:src="@mipmap/icon_password"
            android:tag="com.maklesoft.padlock" />

        <ImageView
            android:id="@+id/launcher_telegram"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="end"
            android:layout_weight="0"
            android:onClick="onClick"
            android:src="@mipmap/icon_telegram"
            android:tag="org.thunderdog.challegram" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/launcher_phone"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="end"
            android:layout_weight="0"
            android:onClick="onClick"
            android:src="@mipmap/icon_phone"
            android:tag="com.android.dialer" />

        <ImageView
            android:id="@+id/launcher_camera"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="end"
            android:layout_weight="0"
            android:onClick="onClick"
            android:src="@mipmap/icon_camera"
            android:tag="net.sourceforge.opencamera" />

        <ImageView
            android:id="@+id/launcher_music"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="end"
            android:layout_weight="0"
            android:onClick="onClick"
            android:src="@mipmap/icon_music"
            android:tag="org.gateshipone.odyssey" />

        <ImageView
            android:id="@+id/launcher_search"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="end"
            android:layout_weight="0"
            android:onClick="onClick"
            android:src="@mipmap/icon_search"
            android:tag="com.duckduckgo.mobile.android" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_weight="0" />

</LinearLayout>